@model List<HyperTasks.Models.Task>

<div class="list-group shadow-sm border rounded">
    @foreach (var task in Model)
    {
        <div id="task-@task.Id" class="list-group-item d-flex justify-content-between align-items-center">
            <span class="fw-medium">@task.Description</span>

            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary"
                        hx-get="/Tasks?handler=EditForm&id=@task.Id"
                        hx-target="#task-@task.Id"
                        hx-swap="outerHTML"
                        style="margin-right:10px;" >
                    Edit
                </button>

                <form method="post"
                      hx-post="/Tasks?handler=Delete&id=@task.Id"
                      hx-target="#task-list"
                      hx-swap="innerHTML"
                      hx-confirm="Are you sure you want to delete this task?"
                      class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </div>
        </div>
    }
</div>